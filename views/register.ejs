    <%- include('header'); -%>
    <div class="container">
        <div class="container col-md-6 p-5 mt-5 bg-light">
            <h5 class="text-warning mb-3">Register</h5>
            <% if(typeof err != 'undefined') { %>
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong> <%= err %> </strong> 
                  </div>
            <% } %>
            <form action="/register" method="POST" autocomplete="off">
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="confirmpassword" placeholder="Confirm password">
                </div>
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-warning">Submit</button>
                </div>
                <p>Already have an Account ? <a class="card-link" href="/login">Login Here</a> </p>
            </form>
        </div>
    </div>
</body>
</html>